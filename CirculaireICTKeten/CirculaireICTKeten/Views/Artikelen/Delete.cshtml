@model CirculaireICTKeten.Models.ArtikelenModel

<form method="post" asp-action="DeletePost">
    <input asp-for="ArtikelID"/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Artikel</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ArtikelNaam"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ArtikelNaam" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ArtikelSoortId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ArtikelSoortId" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ArtikelPunten"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ArtikelPunten" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Serienummer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Serienummer" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@*Client side validation*@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

