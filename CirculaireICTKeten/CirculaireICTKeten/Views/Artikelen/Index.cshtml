@model IEnumerable<CirculaireICTKeten.Models.ArtikelenModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Artikelen</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Artikelen" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Nieuw artikel toevoegen
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <div style="overflow: auto;">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                <tr>
                    <th>
                        Artikel Naam
                    </th>
                    <th>
                        Artikel SoortId
                    </th>
                    <th>
                        Artikel Punten
                    </th>
                    <th>
                        Serienummer
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.ArtikelNaam</td>
                        <td width="20%">@obj.ArtikelSoortId</td>
                        <td width="20%">@obj.ArtikelPunten</td>
                        <td width="20%">@obj.Serienummer</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Artikelen" asp-route-Id="@obj.ArtikelID" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Artikelen" asp-route-Id="@obj.ArtikelID" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
            }
            else
            {
            <p> No category exists.</p>
            }

        </div>
