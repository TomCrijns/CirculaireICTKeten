@model CirculaireICTKeten.Models.TransactieModel

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Voeg Toe</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Datum"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Datum" class="form-control" />
                        <span asp-validation-for="Datum" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Serienummer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Serienummer" class="form-control" />
                        <span asp-validation-for="Serienummer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Donatie"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Donatie" class="form-control" />
                        <span asp-validation-for="Donatie" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Lening"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Lening" class="form-control" />
                        <span asp-validation-for="Lening" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Terug</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

